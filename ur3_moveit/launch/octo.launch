<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <node pkg="tf2_ros" type="static_transform_publisher" name="camera_link_broadcaster" args="0 0 0.5 0.707 0 -0.707 0 world camera_top_link" />

  <include file="$(find realsense2_camera)/launch/rs_camera.launch">
    <arg name="filters" value="pointcloud" />
    <arg name="camera" value="camera_top" />
  </include>

  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server">
   <param name="resolution" value="0.05"/>


	<param name="sensor_model/hit" value="0.99"/>
	<param name="sensor_model/miss" value="0.05"/>

	 <param name="sensor_model/min" value="0.2"/>
	<param name="sensor_model/max" value="0.8"/>


    <!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
    <param name="frame_id" type="string" value="world"/>

    <!-- maximum range to integrate (speedup!) -->
    <param name="sensor_model/max_range" value="1.0"/>
    <param name="base_frame_id " value="world" type="str"/>

	<!-- not static -->
    <param name="latch" value="false"/>

    <!-- data source to integrate (PointCloud2) -->
    <remap from="cloud_in" to="/camera_top/depth/color/points"/>


  </node>

</launch>
