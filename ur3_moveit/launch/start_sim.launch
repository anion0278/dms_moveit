<?xml version="1.0"?>
<launch>
  <arg name="enable_both_hmi" default="true"/>
  <arg name="enable_directed_vibration" default="true"/>

  <!-- Octomap and sensors settings -->
  <param name="/move_group/octomap_resolution" type="double" value="0.035" />
  <param name="/move_group/max_segment_length" type="double" value="0.5" />
  <param name="/move_group/min_waypoint_count" type="int" value="12" />
  <param name="/move_group/collision/show_distances" type="bool" value="false" />
  <param name="/move_group/collision/show_vector_points" type="bool" value="false" />
  <rosparam ns="/move_group" command="load" file="$(find ur3_moveit)/config/sensors_3d.yaml" />
  <param name="/move_group/manipulator/longest_valid_segment_fraction" type="double" value="0.007" />
  <param name="/move_group/ompl/simplify_solutions" value="true" />

  <!-- Simulation -->
  <arg name="spawn_left_hand" default="true"/>
  <arg name="spawn_right_hand" default="true"/>
  <arg name="spawn_cylinder" default="false"/>
  <arg name="spawn_obstacle_4" default="false"/>
  <arg name="sim_paused" default="true"/>

  <arg name="xacro_file_name" default="ur3e_workspace.xacro"/>
  <arg name="xacro_path" default="$(find ur3_description)/urdf/$(arg xacro_file_name)"/>

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="world_name" default="$(find ur3_description)/gazebo/custom_empty_world.world"/>
    <arg name="paused" value="$(arg sim_paused)"/>
    <arg name="gui" value="true"/>
    <arg name="verbose" value="true" />
  </include>

  <param name="robot_description" command="xacro --inorder '$(arg xacro_path)'" />
  <!-- -unpause is used to unpause the simulation after setting the robot to init position -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -x 0 -y 0 -z 0  -J shoulder_lift_joint -1.57 -J shoulder_pan_joint 1.57 -unpause" respawn="false" output="screen" />

  <include file="$(find ur3_moveit)/launch/ros_controllers.launch"/>
  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>

  <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur3.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>
  <node name="ros_control_controller_manager" pkg="controller_manager" type="controller_manager" respawn="false" output="screen" args="load joint_group_position_controller" />
  
  <node name="hmi_tracker" pkg="ur3_moveit" type="hmi_tracker.py" respawn="false" output="screen"  args="moveit" required="true" />
  <node name="task_commander" pkg="ur3_moveit" type="task_commander.py" respawn="false" output="screen" args="$(arg enable_both_hmi) sim" />

  <group if="$(arg enable_both_hmi)">
    <node name="hmi_starter" pkg="ur3_moveit" type="hmi_controller_starter.py" respawn="false" args="directed_vibration:=$(arg enable_directed_vibration)" output="screen"/>
  </group>
  

  <include file="$(find ur3_moveit)/launch/move_group.launch">
    <arg name="controllers_definition" value="controllers.yaml" />
  </include>

  <!-- obstacle spawning -->
  <group if="$(arg spawn_left_hand)">
    <include file="$(find ur3_moveit)/launch/sdf_spawn.launch">
      <arg name="model_name" value="left_hand" />
      <arg name="x" value="0.073" />
      <arg name="y" value="0.6" />
      <arg name="z" value="1.15" />
      <arg name="yaw" value="0.3" />
      <arg name="sdf_model_file" value="$(find ur3_moveit)/obstacles/hand_left/model.sdf" />
    </include>
  </group>

  <group if="$(arg spawn_right_hand)">
    <include file="$(find ur3_moveit)/launch/sdf_spawn.launch">
      <arg name="model_name" value="right_hand" />
      <arg name="x" value="0.04" />
      <arg name="y" value="0.24" />
      <arg name="z" value="1.17" />
      <arg name="yaw" value="-0.08" />
      <arg name="sdf_model_file" value="$(find ur3_moveit)/obstacles/hand_right/model.sdf" />
    </include>
  </group>

  <group if="$(arg spawn_cylinder)">
    <include file="$(find ur3_moveit)/launch/sdf_spawn.launch">
      <arg name="model_name" value="obstacle" />
      <arg name="x" value="0.22" />
      <arg name="y" value="0.26" />
      <arg name="z" value="1.2" />
      <arg name="sdf_model_file" value="$(find ur3_moveit)/obstacles/cylinder/model.sdf" />
    </include>
  </group>

</launch>
